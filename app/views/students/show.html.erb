<div class="container">
    <div class="row">
        <div class="col-8">
            <p>Student Detail</p>
            <div>
                <strong>Name:</strong>
                <%= @student.name %>
            </div>

            <div>
                <strong>Email:</strong>
                <%= @student.email %>
            </div>

            <div>
                <strong>City:</strong>
                <%= @student.city %>
            </div>

            <div>
                <strong>country:</strong>
                <%= @student.country %>
            </div>

            <div>
                <strong>Contact:</strong>
                <%= @student.contact %>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <%= link_to "Back to student", students_path, class: "btn btn-info" %>
    </div>
    <div class="mt-3">
        <%= render "posts/form" %>
        <%= render "posts/post" %>
    </div>
</div>