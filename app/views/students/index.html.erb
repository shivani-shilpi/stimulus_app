<p style="color: green"><%= notice %></p>
<h1>Student</h1>
<table class="table table-primary">
    <thead class="table-dark">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">City</th>
          <th scope="col">Country</th>
          <th scope="col">Contact</th>
          <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody id="student_list">
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.city %></td>
          <td><%= student.country %></td>
          <td><%= student.contact %></td>
          <td><%= link_to "View", student, class: "btn btn-info", data: { controller: 'student-modal' } %>
          <%= link_to "Edit", edit_student_path(student), class: "btn btn-success", data: { controller: 'student-modal' } %>
          <%= link_to "Delete", student, method: :delete, data: { confirm: "Are you sure you want to delete this user"}, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<%= link_to "NewStudent", new_student_path, data: { controller: 'student-modal' } %>